<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/board_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cells"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/board_background"
        app:layout_constraintTop_toTopOf="@+id/board_background"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/board_play_again_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/board_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/board_player_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/board_play_again_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/board_background"
        app:layout_constraintTop_toBottomOf="@+id/board_cells"
        app:srcCompat="@drawable/xplay" />

    <ImageView
        android:id="@+id/board_win_strike"
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/board_cells"
        app:layout_constraintTop_toTopOf="@+id/board_background"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell1"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toStartOf="@+id/board_cell2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell2"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toStartOf="@+id/board_cell3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/board_cell1"
        app:layout_constraintTop_toTopOf="@+id/board_background"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell3"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/board_cell2"
        app:layout_constraintTop_toTopOf="@+id/board_background"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell4"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toStartOf="@+id/board_cell5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board_cell1"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell5"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toStartOf="@+id/board_cell6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/board_cell4"
        app:layout_constraintTop_toBottomOf="@+id/board_cell2"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell6"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/board_cell5"
        app:layout_constraintTop_toBottomOf="@+id/board_cell3"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell7"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toStartOf="@+id/board_cell8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/board_cell4"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell8"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toStartOf="@+id/board_cell9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/board_cell7"
        app:layout_constraintTop_toBottomOf="@+id/board_cell5"
        app:srcCompat="@drawable/empty" />

    <ImageView
        android:id="@+id/board_cell9"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/board_cell8"
        app:layout_constraintTop_toBottomOf="@+id/board_cell6"
        app:srcCompat="@drawable/empty" />
</androidx.constraintlayout.widget.ConstraintLayout>